<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
    <div align="right">历史阅读量：<span id="visit_article"></span><div>
    <script>
        document.ready = function() {
            $.post("http://localhost:8080/addPostVisit", {postId: <%= post.abbrlink %>}, function(data) {
		         $("#visit_article").text(data - 1);
			});
        };
    </script>
  <% } %>
<% } %>
